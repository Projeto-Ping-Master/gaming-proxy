{
  "name": "gaming-proxy",
  "version": "1.0.0",
  "description": "Sistema de redução de ping para gamers - Cliente + Serviço",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/client",
    "packages/shared",
    "packages/node-server",
    "packages/native-agent"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:client\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:client": "cd packages/client && npm run dev",
    "dev:node-server": "cd packages/node-server && npm run dev",
    "build": "npm run build:backend && npm run build:client && npm run build:node-server",
    "build:backend": "cd packages/backend && npm run build",
    "build:client": "cd packages/client && npm run build",
    "build:node-server": "cd packages/node-server && npm run build",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "npm run typecheck:backend && npm run typecheck:client",
    "typecheck:backend": "cd packages/backend && npm run typecheck",
    "typecheck:client": "cd packages/client && npm run typecheck",
    "test": "npm run test:backend && npm run test:client",
    "test:backend": "cd packages/backend && npm test",
    "test:client": "cd packages/client && npm test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "gaming",
    "proxy",
    "ping",
    "latency",
    "optimization"
  ],
  "author": "Gaming Proxy Team",
  "license": "MIT"
}