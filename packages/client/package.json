{
  "name": "@gaming-proxy/client",
  "version": "1.0.0",
  "description": "Gaming Proxy Desktop Client",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:3001 && electron dist/main.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:dist": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "preview": "vite preview"
  },
  "dependencies": {
    "@gaming-proxy/shared": "*",
    "electron-store": "^8.1.0",
    "axios": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-query": "^3.39.3",
    "recharts": "^2.7.2",
    "lucide-react": "^0.263.1",
    "react-hook-form": "^7.45.4",
    "react-hot-toast": "^2.4.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "vite": "^4.4.8",
    "typescript": "^5.1.6",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "vitest": "^0.34.3"
  },
  "build": {
    "appId": "com.gaming-proxy.app",
    "productName": "Gaming Proxy",
    "directories": {
      "output": "../../dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}